{
  const SOUND_SHOOT      	weather/Storm_exclamation.wav

  const MELEE_RANGE		1
  const MELEE_HITCHANCE 	100%
  const MELEE_ATK_DURATION 	1

  
  const MELEE_TYPE 		strike-land
  const MELEE_DMG 		0
