#include monsters/base_chat
{
	const NO_RUMOR 1
}

{ spawn

   hp	1
   gold	0
   name	Priest of Urdual
   fov	30
   width	32
   height	72
   race	neutral
   roam	0
   setmodel	npc/balancepriest1.mdl
   invincible	1
   setvar	CANCHAT 1

   catchspeech say_hi hi hello hail greet hey
   catchspeech say_theobold theobold
