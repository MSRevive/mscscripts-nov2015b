{
  eventname swing1

  playviewanim  ANIM_ATTACK1
  callevent swing
}
{
  eventname swing2

  playviewanim  ANIM_ATTACK2
  callevent swing
}
{
  eventname swing3

  playviewanim  ANIM_ATTACK3
