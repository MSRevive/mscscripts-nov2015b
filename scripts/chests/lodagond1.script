{ ver_lodagond_chest
	if ( $get(GAME_MASTER,scriptvar,GM_LODAGOND) != 1 )
	{
		deleteent ent_me
	}
	else
	{
		callevent 1.0 spawn_black_chest
		callexternal players ext_reset_lodagond_chests
	}
}

