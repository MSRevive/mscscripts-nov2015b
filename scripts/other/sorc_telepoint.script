#scope server
{ game_spawn

	callevent set_point
	gravity 0
	setmodel none
	invincible 1
	race beloved
}

{ set_point
	if ( !$get(GAME_MASTER,isalive) ) callevent $randf(1.0,2.0) set_point 

	if $get(GAME_MASTER,isalive)

	callexternal GAME_MASTER gm_set_sorc_point $get(ent_me,origin)
	callevent 1.0 remove_me
}

{ remove_me
	deleteent ent_me
}
