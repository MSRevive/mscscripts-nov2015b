//	{
//		setvard LOCK_ON PARAM1
//		local LOCK_POS_X $vec.x(game.tempent.origin)
//		local LOCK_POS_Y $vec.y(game.tempent.origin)
//		local LOCK_POS_Z $vec.z(game.tempent.origin)
